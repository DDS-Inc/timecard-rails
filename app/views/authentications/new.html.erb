<h1>new Authentication</h1>

<% if @authentication.errors.any? %>
  <% @authentication.errors.messages.each do |message| %>
    <p><%= message[1] %></p>
  <% end %>
<% end %>
<%= form_for([current_user, @authentication]) do |u| %>
  <div class="form-group">
    <%= u.label :provider %>
    <%= u.select :provider,  {"crowdworks" => "crowdworks"} %>
  </div>
  <div class="form-group">
    <%= u.label "crowdworks mail address" %>
    <%= u.text_field :username %>
  </div>
  <%= u.hidden_field :user_id, :value => current_user.id %>
  <div class="actions" >
    <%= u.submit class: "btn btn-success" %>
  </div>
<%  end %>
